<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Color1"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:textColor="@android:color/darker_gray"
        android:id="@+id/textView1"
        android:layout_below="@+id/separator1"
        android:layout_margin="5dp" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/spinner1"
        android:background="#c9c9c9"
        android:layout_toRightOf="@+id/textView1"
        android:layout_toLeftOf="@+id/button1"
        android:layout_below="@+id/separator1"
        android:layout_margin="5dp"/>

    <Button
        android:text="Custom"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:id="@+id/button1"
        android:layout_below="@+id/separator1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:onClick="showCustomColorPicker1"/>

    <Spinner
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/spinner2"
        android:background="#c9c9c9"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toLeftOf="@+id/b_custom2"
        android:layout_below="@+id/spinner1"
        android:layout_margin="5dp"/>

    <Button
        android:text="Custom"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:id="@+id/b_custom2"
        android:layout_below="@+id/button1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:onClick="showCustomColorPicker2"/>

    <TextView
        android:text="Color2"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:textColor="@android:color/darker_gray"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView1"
        android:layout_margin="5dp"/>

    <View
        android:id="@+id/separator1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/spinner3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Effect"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:textColor="@android:color/darker_gray"
        android:layout_margin="5dp"
        android:id="@+id/textView3" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#c9c9c9"
        android:layout_toRightOf="@+id/textView3"
        android:layout_margin="5dp"
        android:id="@+id/spinner3" />

    <TextView
        android:text="Speed"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:textColor="@android:color/darker_gray"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView2"
        android:layout_margin="5dp"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner2"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:layout_toLeftOf="@+id/seekbarValue"
        android:layout_toStartOf="@+id/seekbarValue"
        android:layout_marginTop="10dp"
        android:id="@+id/seekBar4"
        android:max="20"/>

    <TextView
        android:id="@+id/seekbarValue"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@+id/b_custom2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"/>


</RelativeLayout>
